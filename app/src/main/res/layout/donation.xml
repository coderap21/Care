<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">


    <healthandcharity.socialcause.care.MLRoundedImageView
        android:id="@+id/organisation_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/horizontal_margin_medium"
        android:layout_marginStart="@dimen/horizontal_margin_medium"
        android:layout_marginEnd="@dimen/horizontal_margin_medium"
        android:layout_marginRight="@dimen/horizontal_margin_medium"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_profile_pic" />

    <TextView
        android:id="@+id/organisation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:layout_toEndOf="@+id/organisation_logo"
        android:layout_toRightOf="@+id/organisation_logo"
        android:text="Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/donation_amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/organisation_name"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:layout_toEndOf="@+id/organisation_logo"
        android:layout_toRightOf="@+id/organisation_logo"
        android:text="$23"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorGreen" />

    <TextView
        android:id="@+id/donation_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/donation_amt"
        android:layout_toEndOf="@+id/organisation_logo"
        android:layout_toRightOf="@+id/organisation_logo"
        android:text="Pending"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor" />


</RelativeLayout>