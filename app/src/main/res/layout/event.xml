<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:id="@+id/event_date_view"
        android:layout_width="64dp"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_date"
            android:textStyle="bold"
            android:layout_gravity="top|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textColorInverse" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_month"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textColorInverse" />

    </LinearLayout>

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:layout_toEndOf="@id/event_date_view"
        android:layout_toRightOf="@id/event_date_view"
        android:text="Event_Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor" />

    <ImageView
        android:id="@+id/event_location_imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/event_name"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/event_date_view"
        android:layout_toRightOf="@id/event_date_view" />

    <TextView
        android:id="@+id/event_location_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/event_location_imageView"
        android:layout_toRightOf="@id/event_location_imageView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor" />

    <ImageView
        android:id="@+id/event_crowd_imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/event_name"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/event_location_textView"
        android:layout_toRightOf="@id/event_location_textView" />

    <TextView
        android:id="@+id/event_crowd_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name"
        android:layout_toEndOf="@id/event_crowd_imageView"
        android:layout_toRightOf="@id/event_crowd_imageView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor" />
</RelativeLayout>